{% stylesheet %}
.tss-category-rings {
  background: var(--tss-bg);
  padding: var(--tss-padding-top) 20px var(--tss-padding-bottom);
  text-align: center;
}

.tss-category-rings__heading {
  font-size: 42px;
  font-weight: 800;
  color: #1f7a3a;
  letter-spacing: 2px;
  margin-bottom: 60px;
}

.tss-category-rings__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 50px;
  max-width: var(--tss-max-width);
  margin: 0 auto;
}

.tss-category-rings__item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* ===== RING SYSTEM ===== */
.tss-ring-wrapper {
  position: relative;
  width: calc(190px * var(--tss-scale));
  height: calc(190px * var(--tss-scale));
  display: flex;
  align-items: center;
  justify-content: center;
}

.tss-ring-outer,
.tss-ring-inner {
  position: absolute;
  border-radius: 50%;
  opacity: 0;
  transform: scale(0.8);
  transition: all 0.6s ease;
}

.tss-ring-outer {
  width: calc(190px * var(--tss-scale));
  height: calc(190px * var(--tss-scale));
  border: 6px solid var(--tss-ring-outer);
}

.tss-ring-inner {
  width: calc(140px * var(--tss-scale));
  height: calc(140px * var(--tss-scale));
  border: 4px solid var(--tss-ring-inner);
}

/* DOT */
.tss-ring-dot {
  position: absolute;
  top: 10px;
  right: 20px;
  width: 12px;
  height: 12px;
  background: var(--tss-dot);
  border-radius: 50%;
  opacity: 0;
  transition: opacity 0.4s ease;
}

/* IMAGE */
.tss-category-image {
  width: calc(165px * var(--tss-scale));
  height: calc(165px * var(--tss-scale));
  border-radius: 50%;
  overflow: hidden;
  background: #fff;
  z-index: 3; /* IMPORTANT */
  box-shadow: 0 12px 25px rgba(0,0,0,0.15);
  transition: transform 0.4s ease, box-shadow 0.4s ease;
}

.tss-category-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* ===== HOVER ===== */
.tss-category-rings__item:hover .tss-ring-outer {
  opacity: 1;
  transform: scale(1) rotate(360deg);
}

.tss-category-rings__item:hover .tss-ring-inner {
  opacity: 1;
  transform: scale(1) rotate(-360deg);
}

.tss-category-rings__item:hover .tss-ring-dot {
  opacity: 1;
}

.tss-category-rings__item:hover .tss-category-image {
  transform: translateY(-8px);
  box-shadow: 0 28px 45px rgba(0,0,0,0.3);
}

/* TITLE */
.tss-category-title {
  margin-top: 22px;
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

/* ================= MOBILE (3 PER ROW CLEAN & RESPONSIVE) ================= */
@media (max-width: 768px) {

  .tss-category-rings {
    padding-left: 12px;
    padding-right: 12px;
  }

  .tss-category-rings__grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 22px 16px;
  }

  .tss-category-rings__heading {
    font-size: 24px;
    margin-bottom: 30px;
  }

  /* Make circle responsive to grid column */
  .tss-ring-wrapper {
    width: 100%;
    height: auto;
    aspect-ratio: 1 / 1;
  }

  .tss-ring-outer,
  .tss-ring-inner {
    width: 100%;
    height: 100%;
  }

  .tss-ring-outer {
    border-width: 3px;
  }

  .tss-ring-inner {
    width: 85%;
    height: 85%;
    border-width: 2px;
  }

  .tss-category-image {
    width: 85%;
    height: 85%;
  }

  .tss-category-title {
    font-size: 13px;
    margin-top: 10px;
  }

}
{% endstylesheet %}

<section
  class="tss-category-rings"
  style="
    --tss-bg: {{ section.settings.bg_color }};
    --tss-ring-outer: {{ section.settings.outer_ring_color }};
    --tss-ring-inner: {{ section.settings.inner_ring_color }};
    --tss-dot: {{ section.settings.dot_color }};
    --tss-max-width: {{ section.settings.section_max_width }}px;
    --tss-padding-top: {{ section.settings.padding_top }}px;
    --tss-padding-bottom: {{ section.settings.padding_bottom }}px;
    --tss-scale: {{ section.settings.circle_scale | divided_by: 100.0 }};
  "
>

  {% if section.settings.heading != blank %}
    <h2 class="tss-category-rings__heading">
      {{ section.settings.heading }}
    </h2>
  {% endif %}

  <div class="tss-category-rings__grid">
    {% for block in section.blocks %}
      {% if block.settings.collection %}
        <div class="tss-category-rings__item" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.collection.url }}" style="text-decoration:none; color:inherit;">
            <div class="tss-ring-wrapper">
              <div class="tss-ring-outer"></div>
              <div class="tss-ring-inner"></div>
              <div class="tss-ring-dot"></div>

              <div class="tss-category-image">
                {% if block.settings.collection.image %}
                  <img src="{{ block.settings.collection.image | img_url: '400x400' }}" loading="lazy">
                {% elsif block.settings.collection.products.first.featured_image %}
                  <img src="{{ block.settings.collection.products.first.featured_image | img_url: '400x400' }}" loading="lazy">
                {% endif %}
              </div>
            </div>

            <div class="tss-category-title">
              {{ block.settings.collection.title }}
            </div>
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "TSS – Category Rings",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "SHOP BY CATEGORY" },
    { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#fdeee8" },
    { "type": "color", "id": "outer_ring_color", "label": "Outer Ring Color", "default": "#3aa17e" },
    { "type": "color", "id": "inner_ring_color", "label": "Inner Ring Color", "default": "#8fd3b8" },
    { "type": "color", "id": "dot_color", "label": "Dot Color", "default": "#3aa17e" },
    { "type": "range", "id": "section_max_width", "label": "Section Max Width (px)", "min": 900, "max": 1600, "step": 50, "default": 1200 },
    { "type": "range", "id": "padding_top", "label": "Padding Top (px)", "min": 20, "max": 150, "step": 5, "default": 70 },
    { "type": "range", "id": "padding_bottom", "label": "Padding Bottom (px)", "min": 20, "max": 150, "step": 5, "default": 70 },
    { "type": "range", "id": "circle_scale", "label": "Circle Size Scale", "min": 80, "max": 120, "step": 5, "default": 100 }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        { "type": "collection", "id": "collection", "label": "Select Collection" }
      ]
    }
  ],
  "presets": [
    {
      "name": "TSS – Category Rings",
      "blocks": [
        { "type": "category" },
        { "type": "category" },
        { "type": "category" },
        { "type": "category" }
      ]
    }
  ]
}
{% endschema %}
