{% schema %}
{
  "name": "TSS Product Showcase",
  "settings": [
    {
      "type": "range",
      "id": "section_height",
      "label": "Minimum Section Height (px)",
      "min": 400,
      "max": 1000,
      "step": 50,
      "default": 650
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#87b0d6"
    }
  ],
  "blocks": [
    {
      "type": "product_item",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        },
          {
            "type": "text",
            "id": "custom_reviews",
            "label": "Custom Reviews (optional)"
          },
          {
          "type": "text",
          "id": "product-lable",
          "label": "Lable (optional)",
          "default": "Best Seller"
          }
      ]
    }
  ],
  "presets": [
    { "name": "TSS Product Showcase" }
  ]
}
{% endschema %}

<section 
  class="tss-showcase"
  style="min-height: {{ section.settings.section_height }}px; background: {{ section.settings.bg_color }};"
>

  <!-- Navigation -->
  <button class="tss-nav tss-prev">&#10094;</button>
  <button class="tss-nav tss-next">&#10095;</button>

  <!-- Product Wrapper -->
  <div class="tss-wrapper" id="tssCarousel">

    {% for block in section.blocks %}
      {% assign product = block.settings.product %}
      {% if product != blank %}

      <div class="tss-card">

        <!-- Product Image -->
        <div class="tss-img">
          <a href="{{ product.url }}">
            <img 
              src="{{ product.featured_image | image_url: width: 600 }}" 
              alt="{{ product.title }}"
            >
          </a>
        </div>

        <!-- Product Title -->
        <p class="tss-product-title">
          {{ product.title }}
        </p>

        <!-- Reviews -->
        {% if block.settings.custom_reviews != blank %}
          <div class="tss-reviews">
            {{ block.settings.custom_reviews }}
          </div>
        {% else %}
          <div class="tss-reviews">
            â˜…â˜…â˜…â˜…â˜… <span>(No reviews)</span>
          </div>
        {% endif %}
        <div class="tss-product-lable">
          {{ block.settings.product-lable }}
        </div>
        <!-- Price -->
        <div class="tss-price">
          {{ product.price | money }}
        </div>

        <!-- Redirect Button -->
        <a href="{{ product.url }}" class="tss-btn" style="background-color: #0f4d2e;">
          ADD TO CART
        </a>

      </div>

      {% endif %}
    {% endfor %}

  </div>

</section>

<style>

.tss-showcase {
  position: relative;
  padding: 80px 0;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.tss-wrapper {
  display: flex;
  gap: 60px;
  max-width: 1200px;
  width: 100%;
  overflow: hidden;
  scroll-behavior: smooth;
}

.tss-card {
  flex: 0 0 260px;
  text-align: center;
}

.tss-img {
  margin-bottom: 15px;
}

.tss-img img {
  width: 100%;
  max-width: 200px;
  display: block;
  margin: auto;
  transition: 0.3s ease;
}

.tss-img img:hover {
  transform: scale(1.05);
}

.tss-product-title {
  font-weight: 700;
  font-size: 15px;
  text-transform: uppercase;
  margin-bottom: 8px;
}

.tss-title {
  font-weight: 700;
  font-size: 15px;
  text-transform: uppercase;
  margin-bottom: 8px;
  display: none;
}

.tss-reviews {
  font-size: 14px;
  margin-bottom: 8px;
}

.tss-price {
  font-weight: 600;
  margin-bottom: 15px;
}

.tss-btn {
  display: inline-block;
  background: #0f4d2e;
  color: #fff;
  padding: 12px 32px;
  border-radius: 30px;
  font-size: 14px;
  text-decoration: none;
  transition: 0.3s ease;
}

.tss-btn:hover {
  background: #187748;
}

/* Navigation */
.tss-nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 45px;
  height: 45px;
  border-radius: 50%;
  background: #fff;
  border: none;
  cursor: pointer;
  box-shadow: 0 10px 25px rgba(0,0,0,0.1);
  z-index: 10;
}

.tss-prev { left: 20px; }
.tss-next { right: 20px; }

/* MOBILE */
@media (max-width: 768px) {
  .tss-wrapper {
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    gap: 20px; /* slightly tighter spacing */
    padding: 0 20px;
  }

  .tss-card {
    flex: 0 0 80%;
    scroll-snap-align: center;
  }

  .tss-nav {
    display: none;
  }
}

/* ðŸ”´ SUPER SAVER LABEL */

.tss-product-lable {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 10px 20px;
  background-color: #e00000;
  color: #ffffff;
  font-weight: 600;
  font-size: 10px;
  text-transform: uppercase;
  border-radius: 999px;
  letter-spacing: 0.5px;
  cursor: pointer;
  overflow: hidden;
  transition: all 0.3s ease;
}

/* âš¡ Lightning Auto Effect */
.tss-product-lable::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 50%;
  height: 100%;
  background: linear-gradient(
    120deg,
    transparent,
    rgba(255,255,255,0.75),
    transparent
  );
  transform: skewX(-25deg);
  animation: lightningSwipe 2s linear infinite;
}

/* Lightning Animation */
@keyframes lightningSwipe {
  0% {
    left: -100%;
  }
  35% {
    left: 130%;
  }
  100% {
    left: 130%;
  }
}

/* Hover enhancement */
.tss-product-lable:hover {
  box-shadow: 0 0 18px rgba(255, 0, 0, 0.7);
  transform: translateY(-2px);
}

</style>

<script>
document.addEventListener("DOMContentLoaded", function(){

  const carousel = document.getElementById("tssCarousel");
  const next = document.querySelector(".tss-next");
  const prev = document.querySelector(".tss-prev");

  if(next && prev && carousel){
    next.addEventListener("click", function(){
      carousel.scrollBy({ left: 300, behavior: "smooth" });
    });

    prev.addEventListener("click", function(){
      carousel.scrollBy({ left: -300, behavior: "smooth" });
    });
  }

});
</script>
